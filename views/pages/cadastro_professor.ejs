<!-- views/cadastro_professor.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
	<title><%= title %></title>
	<% include ../partials/head %>
</head>
<body>
	<!-- start: Header -->
	<% include ../partials/navbar %>
	<!-- start: Header -->

	<div class="content">
	<div class="container">
		<div class="col-sm-6 col-sm-offset-3">
			<h1><span class="fa fa-sign-in"></span> Cadastro de Professor </h1>
			<!-- show any messages that come back with authentication -->
			<% if (message == 1) { %>
			  <div class="alert alert-error">Erro ao tentar cadastrar 
				professor(a).</div>
			<% } %>

			<!-- LOGIN FORM -->
			<form action="/cadastro_professor" method="post">                
				<div class="form-group">
					<label>Username</label>
					<input type="text" class="form-control" name="username">
				</div>
				<div class="form-group">
					<label>Password</label>
					<input type="password" class="form-control" name="password">
				</div>

				<div class="form-group form-check-inline">
					<label>Sexo</label>
					<label class="form-check-label">
						<input class="form-check-input" type="radio" 
							name="sexo" value="m"> M
					</label>
				</div>
				<div class="form-group form-check-inline">
					<label class="form-check-label">
						<input class="form-check-input" type="radio" 
							name="sexo" value="f"> F
					</label>
				</div>

				<div class="form-group">
					<label>Matr√≠cula</label>
					<input type="text" class="form-control" name="matricula">
				</div>
				<div class="form-group">
					<label>Email</label>
					<input type="email" class="form-control" name="email">
				</div>
				<button type="submit" class="btn btn-warning btn-lg">
				  Cadastrar</button>
			</form>

			<p><a href="/lista_professores">Voltar para lista</a></p>
			<hr>

		</div>
	</div>
	</div>

	<!-- start: Footer-->
	<% include ../partials/footer %>
	<!-- end: Footer-->

	<!-- start: JavaScript-->
	<% include ../partials/scripts %>
	<!-- end: JavaScript-->

</body>
</html>