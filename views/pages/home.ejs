<!-- views/home.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
	<title>
		<%= title %>
	</title>
	<base href="home">
	<% include ../partials/head %>
</head>
<body>
	<!-- start: Header -->
	<% include ../partials/navbar %>
		<!-- end: Header -->

		<div class="container-fluid-full">
			<div class="row-fluid">
				<!-- start: Main Menu -->
				<% include ../partials/sidebar_left %>
					<!-- end: Main Menu -->

					<!-- start: Content -->
					<div id="content" class="span10">

						<ul class="breadcrumb">
							<li>
								<i class="icon-home"></i>
								<a href="home">Home</a>
								<i class="icon-angle-right"></i>
							</li>
							<li><a href="#">Lista Disciplinas</a></li>
						</ul>

						<div class="row-fluid sortable">
							<div class="box span12">

								<div class="box-header">
									<h2><i class="halflings-icon white align-justify"></i>
										<span class="break"></span></h2>
									<div class="box-icon">
										<a href="#" class="btn-minimize">
											<i class="halflings-icon white chevron-up"></i></a>
									</div>
								</div>

								<div class="box-content">
									<table class="table table-striped">
										<thead>
											<tr>
												<th></th>
											</tr>
										</thead>
										<tbody>
											<% for (var i in lista) { %>
												<tr>
													<td>
														<a href="<%= lista[i].codigo %>">
															<%= lista[i].codigoDisciplina %> - <%= lista[i].nomeDisciplina %>
															- <%= lista[i].idTurma %>
														</a>
													</td>
												</tr>
											<% } %>
										</tbody>
									</table>

								</div>
							</div>
							
						</div>

					</div>		
					<!-- end: Content -->
			</div>
			<!--/#content.span10-->
		</div>
		<!--/fluid-row-->

		<% include ../partials/footer %>

		<!-- start: JavaScript-->
		<% include ../partials/scripts %>
		<!-- end: JavaScript-->
</body>

</html>