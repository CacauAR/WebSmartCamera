<!-- views/pages/profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>	
	<title><%= title %></title>
	<% include ../partials/head %>			
</head>
<body>
	<% include ../partials/navbar %>
	<div class="container-fluid-full">
		<div class="row-fluid">
			<% include ../partials/sidebar_left %>
			<div id="content" class="span10">
				<ul class="breadcrumb">
					<li>
						<i class="icon-home"></i>
						<a href="home">Home</a>
						<i class="icon-angle-right"></i>
					</li>
					<li><a href="#">Perfil do Usuário</a></li>
				</ul>

				<div class="box span11">
					<div class="box-header">
						<h2><i class="halflings-icon user"></i>
							<span class="break"></span>Dados Cadastrados
						</h2>
					</div>
					<div class="box-content">
						<div class="page-header">
							<h1><%= user.nome %> &nbsp &nbsp
								<small>
									<a href="logout" class="btn btn-default btn-sm">Logout</a>
								</small>
							</h1>											
						</div>
						<div class="row-fluid">            
							<div class="span4 ">
								<div class="well">
										<img alt="User Pic" src="public/img/user_upload_images/<%=user.image%>" 
										class="img-circle img-responsive" width="100%" height="100%"><br><br>								
										<form action="/add_user_image" method="post" 
										enctype="multipart/form-data" id="formImage">
											<input id="selectedImage" class="form-control" type="file" 
											name="uploaded_image" accept=""/ style="display:none;">
											<input type="button" value="Mudar Foto"
											onclick="document.getElementById('selectedImage').click();">										
										</form>
									</div>
							</div>
							<div class="span4">
								<table>
									<h2>Tipo de usuário: <small> <%= tipoUsuario %> </small> </h2>
									<h2>Matrícula: <small> <%= user.matricula %> </small></h2>
									<h2>Email: <small> <%= user.email %> </small></h2>
								</table> 
							</div>
						</div>
					</div>
				</div>

			</div>		
		</div>
	</div>
	<script>
		/* Quando o usuário clicar no botão "Mudar Foto" este irá pedir pra 
			 selecionar uma imagem nova dos arquivos; assim q o formulário receber o
			 novo valor como o nome da imagem, este irá submeter o formulário
		*/
		document.getElementById("selectedImage").onchange = function() {
    	document.getElementById("formImage").submit();
		};
	</script>
	<% include ../partials/footer %>
	<% include ../partials/scripts %>	
</body>
</html>